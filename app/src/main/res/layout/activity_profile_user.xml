<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="80dp"
            android:text="Personal Details"
            android:textSize="32sp"
            android:textStyle="bold">
        </TextView>
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="68dp"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/user" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="372dp"
                android:layout_height="340dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="170dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/registration"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="40dp"
                    android:text="Registration no. :"
                    android:textSize="20sp"></TextView>

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="32dp"
                    android:hint="enter last name"
                    android:minHeight="48dp"></EditText>

                <TextView
                    android:id="@+id/firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="90dp"
                    android:text="first Name :"
                    android:textSize="20sp"></TextView>

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="80dp"
                    android:hint="enter first name"
                    android:inputType="text"
                    android:minHeight="48dp"></EditText>

                <TextView
                    android:id="@+id/lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="143dp"
                    android:text="last Name :"
                    android:textSize="20sp"></TextView>

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="133dp"
                    android:hint="enter last name"
                    android:inputType="text"
                    android:minHeight="48dp"></EditText>

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="196dp"
                    android:text="Age :"
                    android:textSize="20sp"></TextView>

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="186dp"
                    android:hint="enter your age"
                    android:inputType="number"
                    android:minHeight="48dp"></EditText>

                <TextView
                    android:id="@+id/bloodGrp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="245dp"
                    android:text="Blood Group :"
                    android:textSize="20sp"></TextView>

                <EditText
                    android:id="@+id/bldGrp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="235dp"
                    android:hint="enter your age"
                    android:inputType="text"
                    android:minHeight="48dp"></EditText>

                <TextView
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="285dp"
                    android:text="Date of Birth :"
                    android:textSize="20sp"></TextView>

                <EditText
                    android:id="@+id/editTextDob"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="275dp"
                    android:hint="enter your age"
                    android:inputType="number"
                    android:minHeight="48dp"></EditText>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="372dp"
                android:layout_height="340dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/father"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="39dp"
                    android:text="Father Name :"
                    android:textSize="20sp"></TextView>

                <EditText
                    android:id="@+id/editTextFName"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="32dp"
                    android:hint="enter father's name"
                    android:minHeight="48dp"></EditText>

                <TextView
                    android:id="@+id/Occupation"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="90dp"
                    android:text="Occupation :"
                    android:textSize="20sp"></TextView>

                <EditText
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="80dp"
                    android:hint="fathers's Occupation"
                    android:inputType="text"
                    android:minHeight="48dp"></EditText>

                <TextView
                    android:id="@+id/motherName"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="143dp"
                    android:text="Mother Name :"
                    android:textSize="20sp"></TextView>

                <EditText
                    android:id="@+id/editTextM"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="133dp"
                    android:hint="enter Mother's name"
                    android:inputType="text"
                    android:minHeight="48dp"></EditText>

                <TextView
                    android:id="@+id/mOccupation"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="196dp"
                    android:text="Occupation :"
                    android:textSize="20sp"></TextView>

                <EditText
                    android:id="@+id/editText19"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="185dp"
                    android:hint="Mother's Occupation"
                    android:inputType="number"></EditText>

                <TextView
                    android:id="@+id/bloodGrp1"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="245dp"
                    android:text="Category :"
                    android:textSize="20sp"></TextView>

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General"
                    android:layout_marginTop="270dp"
                    android:layout_marginLeft="50dp"/>
                <RadioButton
                    android:id="@+id/radioButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OBC"
                    android:layout_marginTop="270dp"
                    android:layout_marginLeft="150dp"/>
                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SC/ST"
                    android:layout_marginTop="270dp"
                    android:layout_marginLeft="240dp"/>

            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/resultsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#008000"
                android:text="Submits"
                android:textColorLink="#750C0C" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>