<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="80dp"
            android:text="Personal Details"
            android:textSize="32sp"
            android:textStyle="bold">
        </TextView>
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="68dp"
            android:layout_marginLeft="25dp"
            app:srcCompat="@drawable/user" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="372dp"
                android:layout_height="340dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="170dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/registration"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="40dp"
                    android:text="Registration no. :"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/regdno"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="32dp"
                    android:hint="enter regd no"
                    android:minHeight="48dp">

                </EditText>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="90dp"
                    android:text="first Name :"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/firstname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="80dp"
                    android:hint="enter first name"
                    android:inputType="text"
                    android:minHeight="48dp">

                </EditText>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="143dp"
                    android:text="last Name :"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/lastname"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="133dp"
                    android:hint="enter last name"
                    android:inputType="text"
                    android:minHeight="48dp">

                </EditText>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="196dp"
                    android:text="Age :"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/age"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="186dp"
                    android:hint="enter your age"
                    android:inputType="number"
                    android:minHeight="48dp">

                </EditText>

                <TextView
                    android:id="@+id/bloodGrp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="245dp"
                    android:text="Blood Group :"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/bloodgroup"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="235dp"
                    android:hint="Blod grp"
                    android:inputType="text"
                    android:minHeight="48dp">

                </EditText>

                <TextView
                    android:id="@+id/dob"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="285dp"
                    android:text="Date of Birth :"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/birthday"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="275dp"
                    android:hint="enter your age"
                    android:inputType="number"
                    android:minHeight="48dp">

                </EditText>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="372dp"
                android:layout_height="340dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="20dp">

                <TextView
                    android:id="@+id/father"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="39dp"
                    android:text="Father Name :"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/fathername"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="32dp"
                    android:hint="enter father's name"
                    android:minHeight="48dp">

                </EditText>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="90dp"
                    android:text="Occupation :"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/Foccupation"
                    android:layout_width="206dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="140dp"
                    android:layout_marginTop="80dp"
                    android:hint="fathers's Occupation"
                    android:inputType="text"
                    android:minHeight="48dp">

                </EditText>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="143dp"
                    android:text="Mother Name :"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/mothername"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="133dp"
                    android:hint="enter Mother's name"
                    android:inputType="text"
                    android:minHeight="48dp">

                </EditText>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="196dp"
                    android:text="Occupation :"
                    android:textSize="20sp">

                </TextView>

                <EditText
                    android:id="@+id/Moccupation"

                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="150dp"
                    android:layout_marginTop="185dp"
                    android:hint="Mother's Occupation"
                    android:inputType="number">

                </EditText>




            </androidx.cardview.widget.CardView>
            <Button
                android:id="@+id/resultsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#008000"
                android:text="Submits"
                android:textColorLink="#750C0C" />

            <Button
                android:id="@+id/resultview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#008000"
                android:text="View"
                android:textColorLink="#750C0C" />

        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>