<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="16dp"
    tools:context=".MainActivity2">

    <EditText
        android:id="@+id/sname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"/>

    <EditText
        android:id="@+id/sregd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sname"
        android:layout_marginTop="8dp"
        android:hint="Registration Number"/>

    <EditText
        android:id="@+id/sdob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sregd"
        android:layout_marginTop="8dp"
        android:hint="Date of Birth"/>

    <EditText
        android:id="@+id/sbranch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdob"
        android:layout_marginTop="8dp"
        android:hint="Branch"/>

    <EditText
        android:id="@+id/semail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sbranch"
        android:layout_marginTop="8dp"
        android:hint="Email"/>

    <EditText
        android:id="@+id/sblood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/semail"
        android:layout_marginTop="8dp"
        android:hint="Blood Type"/>

    <EditText
        android:id="@+id/sphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sblood"
        android:layout_marginTop="8dp"
        android:hint="Phone Number"/>

    <EditText
        android:id="@+id/sadress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sphone"
        android:layout_marginTop="8dp"
        android:hint="Address"/>

    <Button
        android:id="@+id/sadd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sadress"
        android:layout_marginTop="16dp"
        android:text="Add"/>

    <Button
        android:id="@+id/sview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sadd"
        android:layout_marginTop="8dp"
        android:text="View"/>

    <Button
        android:id="@+id/sdelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sview"
        android:layout_marginTop="8dp"
        android:text="Delete"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sdelete"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
